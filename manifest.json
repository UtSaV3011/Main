{
    "manifest_version": 2,
    "name": "Productivity Manager",
    "version": "1.0",
    "description": "This extension tracks your overall spending",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "main.html"
    },
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "tabs",
        "activeTab",
        "https://*/*","http://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}